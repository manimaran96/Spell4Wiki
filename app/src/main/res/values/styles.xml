<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!--  color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--  a darker variant of the primary color, used for the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--  a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Material Design 3 Color System -->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnError">@color/colorOnError</item>

        <!-- Custom Edit text style for all edit text view-->
        <item name="editTextStyle">@style/CustomEditTextStyle</item>
        <!-- Custom Text view Style for all text view-->
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
        <!-- Custom Button text style for all Button view-->
        <item name="buttonStyle">@style/CustomButtonStyle</item>
        <!-- Action bar style -->
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!--No action bar Theme-->
    <style name="AppTheme.NoActionBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Toolbar Theme for custom toolbars -->
    <style name="ToolbarTheme" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorOnPrimary</item>
        <item name="subtitleTextColor">@color/colorOnPrimary</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="colorControlNormal">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="elevation">4dp</item>
        <!-- Menu icon colors -->
        <item name="actionMenuTextColor">@color/colorOnPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorOnPrimary</item>
    </style>

    <!-- Full screen Theme-->
    <style name="AppTheme.FullScreen" parent="@style/AppTheme.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
    </style>

    <!-- Action Bar Style -->
    <style name="ActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
        <item name="subtitleTextStyle">@style/ActionBarSubTitleText</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <!-- Icon tinting for dark icons on white background -->
        <item name="colorControlNormal">@color/colorOnPrimary</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        <item name="android:textColorSecondary">@color/colorOnPrimary</item>
        <!-- Menu icon colors -->
        <item name="actionMenuTextColor">@color/colorOnPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorOnPrimary</item>
        <!-- Elevation for Material Design -->
        <item name="elevation">4dp</item>
    </style>

    <!-- Action Bar Title Style -->
    <style name="ActionBarTitleText" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Action Bar SubTitle Style -->
    <style name="ActionBarSubTitleText" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--Custom Edit text style -->
    <style name="CustomEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <!--Custom TextInputLayout style -->
    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="errorTextColor">@color/colorError</item>
    </style>

    <!--Custom Text view style-->
    <style name="CustomTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!--Custom Button style -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:paddingStart">@dimen/btn_padding_start</item>
        <item name="android:paddingEnd">@dimen/btn_padding_end</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/colorPrimaryVariant</item>
    </style>

    <!--Secondary Button style -->
    <style name="SecondaryButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <!--Text Button style -->
    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <!--FAB style -->
    <style name="FABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="tint">@color/colorOnSecondary</item>
        <item name="rippleColor">@color/colorSecondaryVariant</item>
    </style>

    <!--PopUpMenu Style-->
    <style name="PopUpMenuStyle" parent="AppTheme.PopupOverlay">
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:popupBackground">@drawable/bg_blue</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- Define your custom dialog theme here extending from base -->
    <style name="RecordDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="RecordAudioDialogTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:fillViewport">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- Tab Text Appearance -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Bottom Sheet Dialog Theme -->
    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
    </style>

    <!-- Menu Item Style for About Screen -->
    <style name="AboutMenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/content_margin_horizontal</item>
        <item name="android:paddingEnd">@dimen/content_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
        <item name="android:drawablePadding">@dimen/margin_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_semi_normal</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

</resources>
