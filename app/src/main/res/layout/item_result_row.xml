<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/btnWikiMeaning"
        android:maxLines="2"
        android:padding="@dimen/space20dp" />

    <LinearLayout
        android:id="@+id/btnWikiMeaning"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <View
            android:layout_width="0.001dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/action_icon"
            android:layout_height="@dimen/action_icon"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/space20dp"
            android:layout_marginEnd="@dimen/space20dp"
            android:contentDescription="@string/wiktionary"
            app:srcCompat="@drawable/ic_info" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.001dp"
        android:layout_alignBottom="@+id/txtWord"
        android:layout_marginLeft="@dimen/space10dp"
        android:layout_marginRight="@dimen/space10dp"
        android:background="@color/black" />


</RelativeLayout>