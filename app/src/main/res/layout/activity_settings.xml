<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.about.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/content_margin_horizontal"
        android:paddingTop="@dimen/margin_large">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitleLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/language"
            android:textColor="@color/w_blue"
            android:textSize="@dimen/text_normal" />

        <LinearLayout
            android:id="@+id/layoutSpell4WikiLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:layout_marginBottom="@dimen/section_spacing">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/settings_label_text"
                android:text="@string/spell_4_wiki_all"
                android:textSize="@dimen/text_normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSpell4WikiLang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/language"
                android:textColor="@color/settings_status_text"
                android:textSize="@dimen/text_semi_normal" />

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitleLicense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/license"
            android:textColor="@color/w_blue"
            android:textSize="@dimen/text_normal" />

        <LinearLayout
            android:id="@+id/layoutLicenseOfUploadAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:layout_marginBottom="@dimen/section_spacing">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/settings_label_text"
                android:text="@string/license_of_upload_audio"
                android:textSize="@dimen/text_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space2dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtLicenseOfUploadAudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space4dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/language"
                    android:textColor="@color/settings_status_text"
                    android:textSize="@dimen/text_semi_normal" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtLicenseOfUploadAudioLegalCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/language"
                    android:textColor="@color/settings_status_text"
                    android:textSize="@dimen/text_semi_normal" />

            </LinearLayout>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitleAppSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space16dp"
            android:layout_marginBottom="@dimen/space8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="@string/app_settings"
            android:textColor="@color/w_blue"
            android:textSize="@dimen/text_normal" />

        <LinearLayout
            android:id="@+id/layoutLanguageOfApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/settings_label_text"
                android:text="@string/app_language"
                android:textSize="@dimen/text_normal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAppLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space2dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/language"
                android:textColor="@color/settings_status_text"
                android:textSize="@dimen/text_semi_normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRunFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtRfCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:maxLines="2"
                android:ellipsize="middle"
                android:textColor="@color/settings_label_text"
                android:text="@string/run_filter_settings_count" />

            <RelativeLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtRfStartCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space2dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="1"
                    android:textColor="@color/settings_status_text"
                    android:textSize="@dimen/text_semi_normal"
                    tools:ignore="HardcodedText" />

                <SeekBar
                    android:id="@+id/seekBarRunFilterCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/space8dp"
                    android:layout_toStartOf="@+id/txtRfEndCount"
                    android:layout_toEndOf="@+id/txtRfStartCount"
                    android:max="100"
                    android:progress="25" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtRfEndCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space2dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_alignParentEnd="true"
                    android:text="100"
                    android:textColor="@color/settings_status_text"
                    android:textSize="@dimen/text_semi_normal"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</ScrollView>
