<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/img_splash"
        android:layout_width="@dimen/logo_large"
        android:layout_height="@dimen/logo_large"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_spell4wiki_logo" />

    <TextView
        android:id="@+id/txt_app_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_splash"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/space_12dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/w_blue"
        android:textSize="@dimen/text_x_large"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_12dp"
        android:layout_marginBottom="@dimen/space_32dp"
        android:background="@drawable/bg_button"
        android:paddingStart="@dimen/space_32dp"
        android:paddingEnd="@dimen/space_32dp"
        android:text="@string/start"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>