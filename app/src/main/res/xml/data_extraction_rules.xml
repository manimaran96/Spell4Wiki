<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="spell4wiki_pref.xml"/>
        <exclude domain="database" path="Spell4Wiki-DB"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow device transfer for user preferences -->
        <include domain="sharedpref" path="spell4wiki_pref.xml"/>
    </device-transfer>
</data-extraction-rules>
